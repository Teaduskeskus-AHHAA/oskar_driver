<?xml version="1.0" ?>
<robot name="Oskar III">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.430 0.320 0.140"/>
      </geometry>
      <material name="gray">
        <color rgba=".66 .66 .67 1" />
      </material>
    </visual>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.075" length="0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.075" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1" />
      </material>
    </visual>
  </link>

  <joint name="left_wheel_to_base" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.1075 -0.1851 -0.05" rpy="1.57 0.0 0.0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_to_base" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.1075 0.1851 -0.05" rpy="1.57 0.0 0.0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>